{
  "name": "backend-app",
  "version": "1.0.0",
  "description": "Backend Application",
  "main": "index.js",
  "scripts": {
    "start": "npm run prod",
    "prod": "cross-env NODE_ENV=production npm-run-all build server",
    "build": "npm-run-all clean transpile",
    "clean": "rimraf dist",
    "transpile": "babel ./src --out-dir dist",
    "server": "node ./dist/index.js",
    "start:dev": "cross-env NODE_ENV=development nodemon --exec babel-node ./src/index.js",
    "test": "jest --detectOpenHandles"
  },
  "author": "Robert Kerscher",
  "license": "",
  "dependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@paypal/checkout-server-sdk": "^1.0.2",
    "axios": "latest",
    "babel-jest": "^26.6.3",
    "bcrypt": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "cookie-parser": "latest",
    "cors": "latest",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "latest",
    "express-validation": "latest",
    "helmet": "^3.11.0",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.1.1",
    "mongod": "^2.0.0",
    "mongodb": "^3.6.4",
    "multer": "^1.4.2",
    "node-geocoder": "^3.27.0",
    "nodemailer": "^6.4.16",
    "npm-run-all": "^4.1.5",
    "qs": "^6.9.6",
    "rimraf": "^3.0.2",
    "sharp": "^0.27.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^26.6.3",
    "moxios": "latest",
    "nodemon": "^1.19.4",
    "supertest": "^6.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/api-requests/"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run start:dev",
    "watch": [
      "src/*"
    ],
    "ignore": [
      "**/tests/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "esmodules": true
          }
        }
      ]
    ]
  }
}
